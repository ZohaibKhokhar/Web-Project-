    <script>
        $(document).ready(function () {



            // Function to update the cart count
            function updateCartCount(count) {
                $('#cart-count').text(count); // Update the cart count on the page
                if (count > 0) {
                    $('#empty-cart-message').hide();
                } else {
                    $('#empty-cart-message').show();
                }
            }

            // Call updateCartCount on page load to set the initial count
            $.ajax({
                type: "GET",
                url: '@Url.Action("GetCartCount", "Order")', // Call the GetCartCount method
                success: function (response) {
                    updateCartCount(response.count); // Update the cart count on the page
                },
                error: function (xhr, status, error) {
                    console.error("An error occurred: " + xhr.responseText);
                }
            });
        });
    </script>


