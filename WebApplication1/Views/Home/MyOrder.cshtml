@model List<Order>
@{
	Layout = "Layout2";
}

<div class="text-center" style="margin-top:80px;">
    <p class="welcome">Your Online Order</p>
</div>



<div class="container-fluid" style="margin-top:90px; margin-bottom:150px;">
    <table class="table table-responsive table-striped table-bordered" style="width:100%">
        <tbody>
            <tr>
                <th><h4>Order Date and Time</h4></th>
              
                <th><h4>Order Detail</h4></th>
                <th><h4>Customer Detail</h4></th>
            </tr>

            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderDate</td>
                   
                    <td><a class="btn btn-outline-warning" href="@Url.Action("YourOrder", "Home", new { id =order.OrderId })">  view order</a></td>
                    <td><a class="btn btn-outline-info" href="@Url.Action("YourDetail", "Home", new { id =order.CustomerId })"> view detail</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>