@model List<OrderItem>
@{
    Layout = "Layout2";
}

<div class="text-center" style="margin-top:80px;">
    <p class="welcome">Products Ordered</p>
</div>

<div class="container-fluid" style="margin-top:90px; margin-bottom:150px;">
    <table class="table table-responsive table-striped table-bordered" style="width:100%">
        <tbody>
            <tr>
                <th><h4>ID</h4></th>
                <th><h4>product</h4></th>
                <th><h4>Quantity</h4></th>
                <th><h4>Price</h4></th>
                <th><h4>Product Detail</h4></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.ProductId</td>
                    <td>@item.Quantity</td>
                    <td>@item.Price</td>
                    <td><a class="btn btn-outline-success" href="@Url.Action("ProductDetail", "Home", new { id =item.ProductId })">Product Detail</a></td>
                </tr>
            }
        </tbody>
    </table>

</div>