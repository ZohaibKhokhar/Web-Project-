@model List<Order>
@{
    Layout = "_AdminLayout";
}

<div class="text-center" style="margin-top:80px;">
    <p class="welcome">Orders</p>
</div>
        



<div class="container-fluid" style="margin-top:30px;">
    <table class="table table-responsive table-striped table-bordered" style="width:100%">
        <tbody>
            <tr>
                <th><h4>Order Id</h4></th>
                <th><h4>Order Date and Time</h4></th>
                <th><h4>Customer Id</h4></th>
                <th><h4>Order Detail</h4></th>
                <th><h4>Customer Detail</h4></th>
                <th><h4>Delivered</h4></th>
                <th><h4>Delete</h4></th>
            </tr>

            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderId</td>
                    <td>@order.OrderDate</td>
                    <td>@order.CustomerId</td>
                    <td><a class="btn btn-outline-warning" href="@Url.Action("OrderDetail", "AdminPanel", new { id =order.OrderId })">View Order</a></td>
                    <td><a class="btn btn-outline-info" href="@Url.Action("CustomerDetail", "AdminPanel", new { id =order.CustomerId })">Customer</a></td>
                    <td><a class="btn btn-outline-success" href="@Url.Action("OrderDelivered", "AdminPanel", new { id =order.OrderId })">Delivered</a></td>
                    <td><a class="btn btn-outline-danger" href="@Url.Action("DeleteOrder", "AdminPanel", new { id =order.OrderId })">Delete</a></td>


                </tr>
            }
        </tbody>
    </table>
</div>