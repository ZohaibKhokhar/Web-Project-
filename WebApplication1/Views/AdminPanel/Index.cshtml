@model List<Products>
@{
    Layout = "_AdminLayout";
}


<div class="container">
    <div class="row">
        <div class="col-lg-6 col-md-3 col-sm-2"></div>

        <div class="col-lg-5 col-md-7 col-sm-8">
            <p class="welcome">All Products</p>

        </div>

        <div class="col-lg-2 col-md-2 col-sm-2"></div>

    </div>

</div>

<div class="container-fluid" style="margin-top:30px;">
    <table class="table table-responsive table-striped table-bordered" style="width:100%">
        <tbody>
                <tr>
                    <th><h4>ID</h4></th>
                    <th><h4>Name</h4></th>
                    <th><h4>Price</h4></th>
                    <th><h4>DiscountedPrice</h4></th>
                    <th><h4>Quantity</h4></th>
                    <th><h4>Image</h4></th>
                    <th><h4>Edit</h4></th>
                    <th><h4>Remove</h4></th>
                </tr>

                @foreach (var p in Model)
                {
                    <tr>
                        <td>@p.ID</td>
                        <td>@p.PName</td>
                        <td>@p.Price</td>
                        <td>@p.DiscountedPrice</td>
                        <td>@p.Quantity</td>
                        <td><img src="@p.ImageUrl" alt="this is an image" class="img-fluid" style="height:60px; width:60px;" /></td>
                        <td><a class="btn btn-outline-secondary" href="@Url.Action("Edit", "AdminPanel", new { id =p.ID })">Edit</a></td>
                        <td><a class="btn btn-outline-danger" href="@Url.Action("Remove", "AdminPanel", new { id =p.ID })">Remove</a></td>
                    </tr>
                }
            </tbody>
        </table>
 
</div>